{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "sourceMap": true,
        "outDir": "build",
        "downlevelIteration": true,
        "declaration": true,
        "skipLibCheck": true,
        "noImplicitAny": true,
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "typeRoots": ["./node_modules/@types", "./src/types"]
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
