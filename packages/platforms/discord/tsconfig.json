{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "sourceMap": true,
        "outDir": "build",
        "downlevelIteration": true,
        "declaration": true,
        "skipLibCheck": true,
        "noImplicitAny": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
